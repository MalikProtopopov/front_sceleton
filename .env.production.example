# =============================================================================
# Production Environment Variables
# =============================================================================
# Copy this to .env.production and fill in your values
# Usage: docker compose -f docker-compose.prod.yml --env-file .env.production up -d

# API URL (your backend API endpoint)
NEXT_PUBLIC_API_URL=https://api.mediann.dev

# Admin Panel URL (where this admin panel is hosted)
NEXT_PUBLIC_ADMIN_URL=https://admin.mediann.dev

# Docker image tag (default: latest)
IMAGE_TAG=latest

# Docker Compose project name
COMPOSE_PROJECT_NAME=cms

# Network settings
# Set to 'true' if connecting to existing backend network (recommended for same-server deploy)
EXTERNAL_NETWORK=true
# Network name (should match backend's network - check with: docker network ls)
NETWORK_NAME=backend_app_network
